# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/job-importer
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/job-importer

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# For Redis Cloud: Use provided host, port, and password

# Server Configuration
PORT=5000
NODE_ENV=development

# Client Configuration
CLIENT_URL=http://localhost:3000

# Worker Configuration
WORKER_CONCURRENCY=2
BATCH_SIZE=50

# Cron Configuration
ENABLE_CRON=true
IMPORT_INTERVAL_HOURS=1

# Logging
LOG_LEVEL=info
